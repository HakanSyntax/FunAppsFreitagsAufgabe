<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item">

    <View
        android:id="@+id/songCard"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/tvCoverImg"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvTrackName"
        android:layout_width="234dp"
        android:layout_height="39dp"
        android:layout_marginStart="1dp"
        android:text="Banana Pancakes"
        android:textColor="@color/SI_DeepPurple"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/tvArtistName"
        app:layout_constraintStart_toEndOf="@+id/tvCoverImg"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvArtistName"
        android:layout_width="234dp"
        android:layout_height="37dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="4dp"
        android:text="Jack Johnson"
        android:textColor="@color/SI_DeepPurple"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvCoverImg"
        app:layout_constraintTop_toBottomOf="@id/tvTrackName" />

    <TextView
        android:id="@+id/tvTrackTime"
        android:layout_width="43dp"
        android:layout_height="17dp"
        android:layout_marginEnd="2dp"
        android:text="02:02"
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/tvTrackName"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
